    <form method="POST" action="/signup" class="signup-form">
        <h1>Signup</h1>

        
        <div class="txtb">
            <input type="text" name="firstname">
            <span data-placeholder="Firstname"></span>
        </div>

        <div class="txtb">
            <input type="text" name="lastname">
            <span data-placeholder="Lastname"></span>
        </div>
        
        <div class="txtb">
            <input type="email" name="email">
            <span data-placeholder="Email"></span>
        </div>

        <div class="txtb">
            <input type="text" name="username">
            <span data-placeholder="Username"></span>
        </div>

        <div class="txtb">
            <input type="password" name="password">
            <span data-placeholder="Password"></span>
        </div>

        <input type="submit" class="supbtn" value="Sign in">

        <div class="bottom-text">
            Already have account? <a href="http://localhost:9999/login">Log in</a>
        </div>

    </form>

    <script type="text/javascript">
        $(".txtb input").on("focus", function () {
            $(this).addClass("focus");
        });

        $(".txtb input").on("blur", function () {
            if ($(this).val() == "")
                $(this).removeClass("focus");
        });

    </script>

</body>

</html>